---
const { title = "СУДЭКСПЕРТ", subtitle = "Профессиональные оценочные и экспертные услуги" } = Astro.props;
---

<section class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-20">
	<div class="container mx-auto px-4 text-center">
		<h1 class="text-4xl md:text-6xl font-bold mb-6">{title}</h1>
		<p class="text-xl md:text-2xl mb-8 opacity-90">{subtitle}</p>
		<div class="space-x-4">
			<a href="/contacts" class="bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-bold px-8 py-3 rounded-md transition-colors inline-block">
				Заказать услугу
			</a>
			<a href="/services" class="border-2 border-white hover:bg-white hover:text-gray-900 px-8 py-3 rounded-md transition-colors inline-block">
				Наши услуги
			</a>
		</div>
	</div>
</section>