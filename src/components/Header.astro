---
const { title } = Astro.props;
---

<header class="bg-white shadow-md">
	<div class="container mx-auto px-4 py-6">
		<div class="flex items-center justify-between">
			<div class="flex items-center">
				<img src="/logo.svg" alt="СУДЭКСПЕРТ" class="h-12 w-auto" />
				<h1 class="ml-4 text-2xl font-bold text-gray-800">{title || 'СУДЭКСПЕРТ'}</h1>
			</div>
			<nav class="hidden md:flex space-x-8">
				<a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Главная</a>
				<a href="/services" class="text-gray-600 hover:text-gray-900 transition-colors">Услуги</a>
				<a href="/blog" class="text-gray-600 hover:text-gray-900 transition-colors">Блог</a>
				<a href="/contacts" class="text-gray-600 hover:text-gray-900 transition-colors">Контакты</a>
			</nav>
		</div>
	</div>
</header>